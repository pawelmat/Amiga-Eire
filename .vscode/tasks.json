{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "amigaassembly",
			"vasm": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
				"args": [
					"-m68000",
					"-Fhunk",
					"-linedebug"
				]
			},
			"vlink": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vlink",
				"includes": "eire.s",
				"excludes": "",
				"exefilename": "../uae/dh0/eire",
				"entrypoint": "eire.s",
				"args": [
					"-bamigahunk",
					"-Bstatic"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: build_debug",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "amigaassembly",
			"vasm": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
				"args": [
					"-m68000",
					"-Fhunk",
					"-nosym"
				]
			},
			"vlink": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vlink",
				"includes": "eire.s",
				"excludes": "",
				"exefilename": "../uae/dh0/eire",
				"entrypoint": "eire.s",
				"args": [
					"-bamigahunk",
					"-Bstatic",
					"-s"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: build_release",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "amigaassembly",
			"vasm": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
				"args": [
					"-m68000",
					"-Fhunkexe",
					"-nosym"
				]
			},
			"vlink": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vlink",
				"includes": "eire.s",
				"excludes": "",
				"exefilename": "../uae/dh0/eire",
				"entrypoint": "eire.s",
				"args": [

					"-bamigahunk",
					"-Bstatic",
					"-s"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: build_release_nolinker",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
            "type": "shell",
            "label": "amigaassembly: copy build",
            "command" : "cp",
            "args": ["-v","${workspaceFolder}/uae/dh0/eire","${workspaceFolder}/build/eire"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
        },
		{
            "type": "shell",
            "label": "amigaassembly: prepare assets",
            "command" : "./assets_prep.cmd",
			"options": {
				"cwd": "${workspaceFolder}/assets"
			},			
			"group": {
				"kind": "build",
				"isDefault": true
			}
        },		
		{
            "type": "shell",
            "label": "amigaassembly: shrink",
            "command" : "tools/shrinkler",
//            "args": ["-2","-f","DFF1A2","-t","\\\"Eire by Suspect and Scoopex\nBOOM! Party 2025 40k A500 OCS Release\n\nProcessing... patience is a virtue!\\\"","${workspaceFolder}/uae/dh0/eire","${workspaceFolder}/uae/dh0/eire.exe"],
//            "args": ["-2","-f","DFF182","-t","\\\"Eire by Suspect and Scoopex\nBOOM! Party 2025 40k A500 OCS Release\n\nProcessing... patience is a virtue!\\\"","${workspaceFolder}/uae/dh0/eire","${workspaceFolder}/uae/dh0/eire.exe"],
//            "args": ["-2","-f","DFF1A2","-T","assets/ascii.txt","${workspaceFolder}/uae/dh0/eire","${workspaceFolder}/uae/dh0/eire.exe"],
            "args": ["-2","-f","DFF1A2","-t","\\\"Eire by Suspect and Scoopex - BOOM! Party 2025 40k A500 OCS Release\\\"","${workspaceFolder}/uae/dh0/eire","${workspaceFolder}/uae/dh0/eire.exe"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
        }
	]
}